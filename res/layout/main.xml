<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<TextView  
		android:paddingTop="20dip"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textSize="16sp" 
	    android:textStyle="bold"
	    android:gravity="center"
		android:text="Shaker Demo"/>
 	<TableLayout
		android:paddingTop="10dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:stretchColumns="*">
		<TableRow>
			<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:textSize="14sp"  
	    		android:text="X-Acc"
	    		android:gravity="center"/>
	    	<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content" 
	    		android:textSize="14sp" 
	    		android:text="Y-Acc"
	    		android:gravity="center"/>
	    	<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:textSize="14sp"  
	    		android:text="Z-Acc"
	    		android:gravity="center"/>
		</TableRow>
		<TableRow>
			<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:id="@+id/x_acc"
	    		android:gravity="center"/>
	    	<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:id="@+id/y_acc"
	    		android:gravity="center"/>
	    	<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:id="@+id/z_acc"
	    		android:gravity="center"/>
		</TableRow>
		<TableRow>
			<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:textSize="14sp"  
	    		android:text="X-Gyro"
	    		android:gravity="center"/>
	    	<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content" 
	    		android:textSize="14sp" 
	    		android:text="Y-Gyro"
	    		android:gravity="center"/>
	    	<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:textSize="14sp"  
	    		android:text="Z-Gyro"
	    		android:gravity="center"/>
		</TableRow>
		<TableRow>
			<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:id="@+id/x_gyro"
	    		android:gravity="center"/>
	    	<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:id="@+id/y_gyro"
	    		android:gravity="center"/>
	    	<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:id="@+id/z_gyro"
	    		android:gravity="center"/>
		</TableRow>
		<TableRow>
			<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:textSize="14sp"  
	    		android:text="X-Angle"
	    		android:gravity="center"/>
	    	<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content" 
	    		android:textSize="14sp" 
	    		android:text="Y-Angle"
	    		android:gravity="center"/>
	    	<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:textSize="14sp"  
	    		android:text="Z-Angle"
	    		android:gravity="center"/>
		</TableRow>
		<TableRow>
			<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:id="@+id/x_angle"
	    		android:gravity="center"/>
	    	<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:id="@+id/y_angle"
	    		android:gravity="center"/>
	    	<TextView  
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:id="@+id/z_angle"
	    		android:gravity="center"/>
		</TableRow>
	</TableLayout>
	
	<Button 
	    android:id="@+id/pause"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/pause"
	    android:onClick="sensorPause" />
	
	<Button 
	    android:id="@+id/startINS"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="StartINS" />
			
	<ImageView
		android:paddingTop="10dip"
		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"
   		android:id="@+id/image"
   		android:layout_gravity="center"
   		android:visibility="invisible"/>
</LinearLayout>